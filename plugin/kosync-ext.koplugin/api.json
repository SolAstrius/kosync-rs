{
    "base_url": "http://localhost:7200/",
    "name": "kosync-ext-api",
    "methods": {
        "register": {
            "path": "/users/create",
            "method": "POST",
            "required_params": [
                "username",
                "password"
            ],
            "payload": [
                "username",
                "password"
            ],
            "expected_status": [201, 402]
        },
        "authorize": {
            "path": "/users/auth",
            "method": "GET",
            "expected_status": [200, 401]
        },
        "update_progress": {
            "path": "/syncs/progress",
            "method": "PUT",
            "required_params": [
                "document",
                "progress",
                "percentage",
                "device",
                "device_id"
            ],
            "payload": [
                "document",
                "progress",
                "percentage",
                "device",
                "device_id"
            ],
            "expected_status": [200, 202, 401]
        },
        "get_progress": {
            "path": "/syncs/progress/:document",
            "method": "GET",
            "required_params": [
                "document"
            ],
            "expected_status": [200, 401]
        },
        "get_annotations": {
            "path": "/syncs/annotations/:document",
            "method": "GET",
            "required_params": [
                "document"
            ],
            "expected_status": [200, 401]
        },
        "update_annotations": {
            "path": "/syncs/annotations/:document",
            "method": "PUT",
            "required_params": [
                "document",
                "annotations",
                "deleted"
            ],
            "optional_params": [
                "base_version"
            ],
            "payload": [
                "annotations",
                "deleted",
                "base_version"
            ],
            "expected_status": [200, 401, 409]
        }
    }
}
